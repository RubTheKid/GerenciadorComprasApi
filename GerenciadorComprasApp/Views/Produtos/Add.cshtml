@model GerenciadorComprasApp.Models.Produto
@{}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Adicionar Produto</h1>
    </div>
</div>

<div class="container py-5">
    <form method="post" asp-action="addProduto">
        <div class="mb-3">
            <label class="form-label">Nome</label>
            <input type="text" class="form-control" id="nome" asp-for="nome" required />
            <span class="text-danger" asp-validation-for="nome"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">GTIN</label>
            <input type="text" class="form-control" id="gtin" asp-for="gtin" required />
            <span class="text-danger" asp-validation-for="gtin"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Preço</label>
            <input type="text" class="form-control" id="preco" asp-for="preco" required />
            <span class="text-danger" asp-validation-for="preco"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Estoque Disponível</label>
            <input type="text" class="form-control" id="estoqueDisponivel" asp-for="estoqueDisponivel" required />
            <span class="text-danger" asp-validation-for="estoqueDisponivel"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Cota Mínima</label>
            <input type="text" class="form-control" id="cotaMinima" asp-for="cotaMinima" required />
            <span class="text-danger" asp-validation-for="cotaMinima"></span>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-success">Adicionar</button>
        </div>
    </form>
</div>