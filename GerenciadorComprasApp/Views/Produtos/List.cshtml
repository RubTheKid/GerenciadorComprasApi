@model IEnumerable<GerenciadorComprasApp.Models.Produto>
@{

}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Produtos Cadastrados</h1>
    </div>
</div>

<div class="container py-5">
    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    @*<th>Id</th>*@
                    <th>Nome</th>
                    <th>Preço</th>
                    <th>GTIN</th>
                    <th>Cota Mínima</th>
                    <th>Estoque Disponível</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var produto in Model)
                {
                    <tr>
                        <td>@produto.nome</td>
                        <td>@produto.preco</td>
                        <td>@produto.gtin</td>
                        <td>@produto.cotaMinima</td>
                        <td style="color:@(produto.estoqueDisponivel < produto.cotaMinima ? "red":"black")">@produto.estoqueDisponivel</td>
                        <td>
                            <a asp-area="" asp-controller="Produtos" asp-action="Edit" asp-route-id="@produto.gtin">Editar</a>
                        </td>
                    </tr>
                }
            </tbody>
            <td>
                <a asp-area="" asp-controller="Produtos" asp-action="Add">Adicionar Produto</a>
            </td>
        </table>
    }
    else
    {
        <p>Não há produtos cadastrados.</p>

      
            <a asp-area="" asp-controller="Produtos" asp-action="Add">Adicionar Produto</a>
       
    }
</div>